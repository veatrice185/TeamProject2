<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_initial" tools:context="com.example.uuser.aums.initialActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IP를 입력하십시오."
        android:id="@+id/TextIPAddress"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:id="@+id/buttonInitial"
        android:layout_marginTop="26dp"
        android:textSize="50dp"
        android:layout_below="@+id/textURL"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textURL"
        android:textSize="30dp"
        android:layout_below="@+id/TextIPAddress"
        android:layout_alignParentStart="true"
        android:text="192.168.43.67:8080/" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="블루투스"
        android:id="@+id/button_BluetoothPage"
        android:textSize="50dp"
        android:layout_alignTop="@+id/buttonInitial"
        android:layout_toEndOf="@+id/buttonInitial"
        android:layout_marginLeft="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textDevice"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />
</RelativeLayout>
