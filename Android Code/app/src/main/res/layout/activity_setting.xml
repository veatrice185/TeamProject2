<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SettingActivity"
    android:background="@drawable/selectmenu">

    <EditText
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/BoxIdText"
        android:layout_marginBottom="263dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Box ID를 입력하세요"
        android:id="@+id/textView3"
        android:layout_above="@+id/BoxIdText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="107dp"
        android:textColor="#000000"
        android:textSize="30dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:text="확인"
        android:id="@+id/buttonSettingConform"
        android:textSize="30dp"
        android:layout_alignTop="@+id/BoxIdText"
        android:layout_toStartOf="@+id/buttonSettingCancel"
        android:layout_marginTop="115dp"
        android:layout_marginRight="30dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:text="취소"
        android:id="@+id/buttonSettingCancel"
        android:textSize="30dp"
        android:layout_alignTop="@+id/buttonSettingConform"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="80dp" />
</RelativeLayout>
