<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.uuser.aums.RentActivity"
    android:background="@drawable/selectumbrella">

        <com.example.uuser.aums.BoxButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="2번"
        android:id="@+id/rent2"
        android:layout_above="@+id/rent1"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="122dp"
        android:textSize="38dp"
        android:layout_marginBottom="20dp" />

    <com.example.uuser.aums.BoxButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="3번"
        android:id="@+id/rent3"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/rent1"
        android:layout_marginBottom="210dp"
        android:textSize="38dp"
        android:layout_marginRight="20dp" />

    <com.example.uuser.aums.BoxButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="4번"
        android:id="@+id/rent4"
        android:layout_above="@+id/rent3"
        android:layout_toStartOf="@+id/rent2"
        android:textSize="38dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp" />

    <com.example.uuser.aums.BoxButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="1번"
        android:id="@+id/rent1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="122dp"
        android:layout_marginBottom="210dp"
        android:textSize="38dp"/>

    <Button
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:text="    취소    "
        android:id="@+id/ButtonCancelRent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:textSize="30dp" />

</RelativeLayout>
